    <div class="modal-overlay" id="history-modal">
        <div class="modal-content">
            <button style="float:right; border:none; background:none; font-size:2rem; cursor:pointer;" onclick="closeModal()">&times;</button>
            <h2 id="modal-title" style="margin-bottom:20px;">數據趨勢圖</h2>
            <div style="height:380px; width:100%;"><canvas id="historyChart"></canvas></div>
        </div>
    </div>

    <script>
        // ... (Keep all your existing script logic exactly as before)
        const config = {
            'A': { name: '小芳堂', id: 'B827EB63D1C8', type: 'lass' },
            'B': { name: '司令台', id: 'B827EBC2994D', type: 'lass' },
            'C': { name: '學務處', id: 'B827EB797224', type: 'lass' },
            'E': { name: '植物觀測', type: 'gas' }
        };

        const GAS_URL = "https://script.google.com/macros/s/AKfycbzAaqP79kMX9Uq_QtIqnwMx8tp2v62k6H5lDOCtCZV2W73NwfWN9kFdMz0Myalx2vxRFw/exec"; 
        let currentSrc = 'A', gauge, historyChart, dataInterval;

        function getColorByLevel(type, value) {
            if (value === null || value === undefined || isNaN(value)) return '#9E9E9E'; 
            switch (type) {
                case 'temp': return (value < 18) ? '#00E5FF' : (value <= 28) ? '#2ECC71' : '#FF1744';
                case 'humi': return (value < 35) ? '#FFD600' : (value <= 65) ? '#2ECC71' : '#00E5FF';
                case 'co2': return (value <= 1000) ? '#2ECC71' : (value <= 2000) ? '#FFD600' : '#FF1744';
                case 'pm25': return (value < 15) ? '#00E5FF' : (value < 35) ? '#2ECC71' : '#FF1744';
                default: return '#9E9E9E';
            }
        }

        window.onload = () => {
            initGauge();
            setupDropdown();
            updateClock();
            setInterval(updateClock, 1000);
            switchPage('A'); 
        };

        function setupDropdown() {
            const btn = document.getElementById('source-selector');
            const list = document.getElementById('source-list');
            btn.onclick = (e) => { e.stopPropagation(); list.classList.toggle('show'); };
            window.onclick = () => list.classList.remove('show');
            document.querySelectorAll('#source-list li').forEach(li => {
                li.onclick = () => {
                    const src = li.dataset.source;
                    btn.textContent = config[src].name + " ▼";
                    switchPage(src);
                };
            });
        }

        function switchPage(src) {
            currentSrc = src;
            if (dataInterval) clearInterval(dataInterval);
            if (config[src].type === 'gas') {
                document.getElementById('lass-view').classList.add('hidden');
                document.getElementById('plant-view').classList.remove('hidden');
                fetchPlantData();
                dataInterval = setInterval(fetchPlantData, 10000);
            } else {
                document.getElementById('lass-view').classList.remove('hidden');
                document.getElementById('plant-view').classList.add('hidden');
                fetchLassData();
                dataInterval = setInterval(fetchLassData, 10000);
            }
        }

        async function fetchLassData() {
            const device = config[currentSrc];
            try {
                const res = await fetch(`https://pm25.lass-net.org/data/last.php?device_id=${device.id}`);
                const json = await res.json();
                const d = json.feeds[0][Object.keys(json.feeds[0])[0]];
                updateLassUI(d);
                document.getElementById('data-status').innerHTML = `<div class="status-dot"></div> ${device.name} 更新成功`;
            } catch (e) { document.getElementById('data-status').innerHTML = `<div class="status-dot" style="background:red"></div> 連線失敗`; }
        }

        async function fetchPlantData() {
            try {
                const res = await fetch(GAS_URL, { redirect: "follow" });
                const data = await res.json();
                const last = data[data.length - 1]; 
                const vals = {
                    'p-temp': [parseFloat(last["溫度"] || last.temp), 'temp'],
                    'p-humi': [parseFloat(last["濕度"] || last.humi), 'humi'],
                    'p-soil': [parseFloat(last["土壤濕度"] || last.soil), 'soil'],
                    'p-co2': [parseFloat(last["CO2"] || last.co2), 'co2']
                };
                for (let id in vals) {
                    const el = document.getElementById(id);
                    const val = vals[id][0];
                    el.textContent = isNaN(val) ? "--" : val;
                    el.style.color = getColorByLevel(vals[id][1], val);
                }
                document.getElementById('data-status').innerHTML = `<div class="status-dot"></div> 植物數據同步中`;
            } catch (e) { console.error(e); }
        }

        function updateLassUI(d) {
            const pm = Math.round(d.s_d0);
            const pmColor = getColorByLevel('pm25', pm);
            document.getElementById('pm25-val').textContent = pm;
            document.getElementById('pm25-val').style.color = pmColor;
            const notice = document.getElementById('aqi-notice');
            notice.textContent = pm < 35 ? '品質良好' : '注意通風';
            notice.style.backgroundColor = pmColor;
            
            gauge.data.datasets[0].backgroundColor = [pmColor, '#eeeeee'];
            gauge.data.datasets[0].data = [pm, Math.max(0, 100 - pm)];
            gauge.update(); 

            updateElement('temp-display', d.s_t0, 'temp', ' °C', 1);
            updateElement('humi-display', d.s_h0, 'humi', ' %', 0);
            updateElement('co2-display', d.s_g8, 'co2', ' ppm', 0);
            updateElement('tvoc-display', d.s_gg || 0, 'tvoc', ' ppb', 0);
        }

        function updateElement(id, val, type, suffix, fix) {
            const el = document.getElementById(id);
            el.innerHTML = `${val.toFixed(fix)} <span class="val-unit">${suffix}</span>`;
            el.style.color = getColorByLevel(type, val);
        }

        function initGauge() {
            const ctx = document.getElementById('pm25Gauge').getContext('2d');
            gauge = new Chart(ctx, {
                type: 'doughnut',
                data: { datasets: [{ 
                    data: [0, 100], backgroundColor: ['#2ECC71', '#eee'], borderWidth: 0, 
                    circumference: 270, rotation: 225, cutout: '85%', borderRadius: 15 
                }] },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, animation: { duration: 1200 }, events: [] }
            });
        }

        function updateClock() {
            const now = new Date();
            const h = now.getHours(), m = now.getMinutes(), s = now.getSeconds();
            document.getElementById('hr').style.transform = `translateX(-50%) rotate(${(h % 12) * 30 + m * 0.5}deg)`;
            document.getElementById('mn').style.transform = `translateX(-50%) rotate(${m * 6}deg)`;
            document.getElementById('sc').style.transform = `translateX(-50%) rotate(${s * 6}deg)`;
            document.getElementById('time-display').textContent = now.toLocaleTimeString('zh-TW', {hour12: false});
            document.getElementById('date-display').textContent = now.toLocaleDateString('zh-TW', { weekday: 'short', month: 'numeric', day: 'numeric' });
        }

        function openModal(label) {
            document.getElementById('modal-title').innerText = `${label} 趨勢`;
            document.getElementById('history-modal').classList.add('active');
            const ctx = document.getElementById('historyChart').getContext('2d');
            if (historyChart) historyChart.destroy();
            historyChart = new Chart(ctx, {
                type: 'line',
                data: { labels: ['08:00', '10:00', '12:00', '14:00', '16:00'], datasets: [{ label: label, data: [22, 25, 27, 26, 23], borderColor: '#4a4545', backgroundColor: 'rgba(74, 69, 69, 0.05)', fill: true, tension: 0.4 }] },
                options: { responsive: true, maintainAspectRatio: false }
            });
        }
        function closeModal() { document.getElementById('history-modal').classList.remove('active'); }
        function navToModal(l) { if (window.innerWidth <= 768) toggleSidebar(); openModal(l); }
        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('active'); }
    </script>
</body>
</html>
